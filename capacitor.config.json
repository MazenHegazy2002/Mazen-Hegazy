
{
  "appId": "com.zylos.app",
  "appName": "Zylos",
  "webDir": "dist",
  "bundledWebRuntime": false,
  "server": {
    "url": "https://your-zylos-app.vercel.app",
    "cleartext": true,
    "allowNavigation": ["*"]
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 3000,
      "backgroundColor": "#0f1115",
      "showSpinner": true,
      "androidSpinnerStyle": "large",
      "iosSpinnerStyle": "small"
    },
    "Keyboard": {
      "resize": "body",
      "style": "dark"
    }
  }
}
